{
    "name": "app-python",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/python/src",
    "targets": {
        "install": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["uv pip install -r pyproject.toml"],
                "cwd": "apps/python"
            }
        },
        "clean": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "rm -rf .pytest_cache",
                    "rm -rf .venv",
                    "rm -rf .coverage"
                ],
                "cwd": "app/python"
            },
            "cache": false
        },
        "run": {
            "executor": "nx:run-commands",
            "options": {
                "command": "PYTHONPATH=../../sdk/python/src uv run src/main.py",
                "cwd": "apps/python"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "outputs": [
                "{workspaceRoot}/reports/apps/python/unittests",
                "{workspaceRoot}/coverage/apps/python"
            ],
            "options": {
                "command": "PYTHONPATH=../../sdk/python/src uv run pytest tests/",
                "cwd": "apps/python"
            },
            "cache": true
        }
    }
}
