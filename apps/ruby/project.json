{
    "name": "app-ruby",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/ruby",
    "projectType": "library",
    "tags": [],
    "targets": {
        "clean": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "rm -rf .yardoc",
                    "rm -rf .rspec_status",
                    "rm -rf pkg"
                ],
                "cwd": "app/ruby"
            },
            "cache": false
        },
        "install": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["bundle install"],
                "cwd": "apps/ruby"
            },
            "cache": false
        },
        "run": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["bundle install", "bundle exec ruby main.rb"],
                "cwd": "apps/ruby"
            },
            "cache": false
        }
    }
}
