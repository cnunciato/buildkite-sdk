{
    "name": "lib-typescript",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/sdk/typescript/src",
    "projectType": "library",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/libs/sdk/typescript",
                "main": "libs/sdk/typescript/src/index.ts",
                "tsConfig": "libs/sdk/typescript/tsconfig.lib.json",
                "assets": ["libs/sdk/typescript/*.md"],
                "clean": true
            },
            "cache": false
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "npm set //registry.npmjs.org/:_authToken=$NPM_TOKEN",
                    "npm publish"
                ],
                "cwd": "dist/libs/sdk/typescript"
            }
        }
    }
}
