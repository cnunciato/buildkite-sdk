{
    "targets": {
        "gen:types": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "node ./sdk/gen-types.js",
                    "npx prettier --write ./sdk/typescript",
                    "black ./sdk/python/src",
                    "go fmt ./sdk/go/sdk/buildkite/*"
                ],
                "parallel": false
            }
        },
        "test:all": {
            "dependsOn": [
                "sdk-typescript:test",
                "sdk-python:test",
                "sdk-go:test",
                "sdk-ruby:test",
                "app-typescript:test",
                "app-python:test",
                "app-go:test"
            ]
        },
        "build:all": {
            "dependsOn": [
                "sdk-typescript:build",
                "sdk-python:build",
                "sdk-go:build",
                "sdk-ruby:build"
            ]
        },
        "start:all": {
            "dependsOn": [
                "app-typescript:start",
                "app-python:start",
                "app-go:start",
                "app-ruby:start"
            ]
        },
        "publish:all": {
            "dependsOn": [
                "sdk-typescript:publish",
                "sdk-python:publish",
                "sdk-go:build"
            ]
        }
    }
}
