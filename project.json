{
    "targets": {
        "clean": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "rm -rf dist",
                    "rm -rf out",
                    "rm -rf tmp",
                    "rm -rf coverage",
                    "rm -rf reports"
                ]
            }
        },
        "gen:types": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "node ./sdk/gen-types.js",
                    "npx prettier --write ./sdk/typescript",
                    "black ./sdk/python/src",
                    "go fmt ./sdk/go/sdk/buildkite/*"
                ],
                "parallel": false
            }
        },
        "test:all": {
            "dependsOn": [
                "sdk-typescript:test",
                "sdk-python:test",
                "sdk-go:test",
                "sdk-ruby:test",
                "app-typescript:test",
                "app-python:test",
                "app-go:test"
            ]
        },
        "build:all": {
            "dependsOn": [
                "sdk-typescript:build",
                "sdk-python:build",
                "sdk-go:build",
                "sdk-ruby:build"
            ]
        },
        "docs:all": {
            "dependsOn": [
                "sdk-typescript:docs:build",
                "sdk-python:docs:build",
                "sdk-ruby:docs:build"
            ]
        },
        "run:all": {
            "dependsOn": [
                "app-typescript:run",
                "app-python:run",
                "app-go:run",
                "app-ruby:run"
            ]
        },
        "publish:all": {
            "dependsOn": [
                "sdk-typescript:publish",
                "sdk-python:publish",
                "sdk-go:build"
            ]
        },

        "rebuild:all": {
            "dependsOn": ["build:all", "docs:all", "run:all"]
        }
    }
}
